  public class Main {
    public static void main(String[] args){
      int populacao_A = 80000;
      int populacao_B = 200000;
      double taxa_crescimento_A = 0.03;
      double taxa_crescimento_B = 0.015;
      int anos = 0;
      while (populacao_A < populacao_B){
        populacao_A += (int) (populacao_A * taxa_crescimento_A);
        populacao_B += (int) (populacao_B * taxa_crescimento_B);
        anos++;
    }
   System.out.println("O número de anos necessários para que a população do pais A ultrapasse ou iguale a população do país B é: " + anos);
    }      
  }
